<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_lordoftherings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lotrnn"
    tools:context="com.example.vikas.bookquotes.lordoftherings">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button android:id="@+id/foring"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/foring"
            android:onClick="fellowship" />

        <Button android:id="@+id/ttowers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ttowers"
            android:onClick="twotowers" />

        <Button android:id="@+id/roking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/roking"
            android:onClick="retking" />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
