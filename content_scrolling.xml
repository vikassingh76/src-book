<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_scrolling" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/books"
    tools:context="com.example.vikas.bookquotes.ScrollingActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <Button android:id="@+id/harrypotter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hp"
        android:onClick="harrypotter"/>

    <Button android:id="@+id/catcherintherye"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tcitr"
        android:onClick="catcherrye"/>

    <Button android:id="@+id/lordoftherings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lotr"
        android:onClick="lotr"/>

    <Button android:id="@+id/lastmanintower"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lmit"
        android:onClick="lastmant"/>

    <Button android:id="@+id/perksofbeingawallflower"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pbwf"
        android:onClick="perks"/>

        <Button android:id="@+id/thewhitetiger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/twt"
            android:onClick="whitetiger"/>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
